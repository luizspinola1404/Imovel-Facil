{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"],
    "baseUrl": "./server",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
