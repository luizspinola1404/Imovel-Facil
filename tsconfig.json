{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "server/dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "server/shared",
    "**/*.config.ts",
    "tailwind.config.ts",
    "node_modules"
  ]
}
