{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "index.ts",
    "routes.ts",
    "static.ts",
    "storage.ts"
  ],
  "exclude": [
    "shared",
    "**/*.config.ts",
    "tailwind.config.ts",
    "node_modules"
  ]
}
